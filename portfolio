    <script>
        function showTab(idx) {
            for (let i = 0; i < 4; i++) {
                document.getElementById('tabBtn'+i).classList.toggle('active', i===idx);
                document.getElementById('tabContent'+i).classList.toggle('active', i===idx);
            }
        }
        showTab(0); // Show home tab by default
    </script>
